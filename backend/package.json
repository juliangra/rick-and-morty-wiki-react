{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "dist/app.js",
  "type": "module",
  "scripts": {
    "build": "NODE_ENV=production rollup -c",
    "start": "npm run build && npm run db:migrate && npm run db:seed && node .",
    "dev": "npm run db:seed && rollup -c -w",
    "db:migrate": "prisma migrate dev",
    "db:seed": "prisma db seed",
    "db:reset": "prisma migrate reset --force && prisma db seed",
    "lint": "eslint .",
    "lint:fix": "eslint --fix",
    "format": "prettier --write './**/*.{js,ts,md,json}' --config ./.prettierrc",
    "postinstall": "prisma generate",
    "gen:types": "graphql-codegen --config codegen.yml && npm run format"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@graphql-tools/load": "^7.7.7",
    "@graphql-tools/schema": "^9.0.4",
    "@graphql-tools/stitch": "^8.7.13",
    "@graphql-tools/url-loader": "^7.16.4",
    "@prisma/client": "^4.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.1",
    "express-graphql": "^0.12.0",
    "graphql": "^15.8.0",
    "graphql-tag": "^2.12.6",
    "prisma": "^4.4.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.13.5",
    "@graphql-codegen/typescript": "2.7.3",
    "@graphql-codegen/typescript-document-nodes": "2.3.3",
    "@graphql-codegen/typescript-resolvers": "2.7.3",
    "@graphql-tools/graphql-file-loader": "^7.5.5",
    "@rollup/plugin-run": "^2.1.0",
    "@rollup/plugin-typescript": "^8.5.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/node": "^18.8.2",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "eslint": "^8.23.0",
    "eslint-plugin-prettier": "^4.2.1",
    "rollup": "^2.79.1",
    "tslib": "^2.4.0",
    "tsx": "^3.10.1",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
